<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <% if @user.errors.any? %>
     <div id="error_explanation">
       <h2><%= @user.errors.count %>errors prohibited this book from being saved:</h2>
       <ui>
         <% @user.errors.full_messages.each do |message| %>
         <li><%= message %></li>
         <% end %>
       </ui>
    </div>
    <% end %>
    <%= form_with model: @user, local: true do |f| %>
      <div class="form-group">
        <label for="user_name">Name</label>
        <%= f.text_field :name, class:"form-control" %>
      </div>
      <div class="form-group">
        <label for="user_image">Image</label><br>
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>
      <div class="form-group">
        <label for="user_introduction">Introduction</label>
        <%= f.text_area :introduction, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User", class:"btn btn-secondary" %>
      </div>
    <% end %>
    </div>
  </div>
</div>