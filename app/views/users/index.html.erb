<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <%= render 'info', user: @user %>
            <%= render 'books/new', {book: @book, user: @user} %>
        </div>
        <div class="col-md-8 offset-md-1">
          <h2>Users</h2>
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th></th>
                  <th>image</th>
                  <th>name</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
                <% @users.each do |user| %>
                <tbody>
                  <tr>
                    <td>
                      <%= image_tag user.get_profile_image(100,100) %>
                    </td>
                    <td>
                      <%= user.name %>
                    </td>
                    <td>
                      <%= link_to "show", user_path(user.id), method: :get %>
                    </td>
                  </tr>
                </tbody>
                <% end %>
            </table>
        </div>
    </div>
</div>