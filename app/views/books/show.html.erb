<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <%= render 'users/info', user: @user %>
            <%= render 'new', {book: @book, user: @user} %>
        </div>
        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
            <table class="table table-hover table-inverse">
              <tbody>
                <tr>
                  <td>
                     <%= link_to user_path(@user) do %>
                        <%= image_tag @book2.user.get_profile_image(100,100) %><br>
                        <%= @user.name %>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to book_path(@book2) do %>
                      <%= @book2.title %>
                    <% end %>
                  </td>
                  <td>
                    <%= @book2.body %>
                  </td>
                  <% if @book2.user.id == current_user.id %>
                  <td>
                    <%=  link_to "Edit", edit_book_path(@book2), class: "btn btn-success" %>
                  </td>
                  <td>
                    <!--%= form_with model: @book2, method: :delete, url: book_path(@book2) do |f| %>
                      <!--%= f.submit 'Destroy', data: { confirm: "本当に消しますか？" }, class:"btn btn-sm btn-danger" %>
                    <!--% end %-->
                    <%= link_to "Destroy", book_path(@book2), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %>
                  </td>
                  <% end %>
                </tr>
              </tbody>
            </table>
        </div>
    </div>
</div>